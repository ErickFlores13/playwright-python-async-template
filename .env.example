# Environment variables template
# Copy this file to .env and fill in your actual values

# ========== Required Configuration ==========
BASE_URL=https://your-application.com
TEST_USERNAME=test_user
TEST_PASSWORD=test_password

# ========== Browser Configuration ==========
BROWSER=chromium                    # Options: chromium | firefox | webkit
HEADLESS=true                       # Options: true | false (false for debugging)
TIMEOUT=30000                       # Test timeout in milliseconds (e.g., 30000, 60000)
VIEWPORT_WIDTH=1920                 # Browser width in pixels (e.g., 1920, 1366, 375 for mobile)
VIEWPORT_HEIGHT=1080                # Browser height in pixels (e.g., 1080, 768, 667 for mobile)
BROWSER_LOCALE=en-US                # Locale format: en-US, es-ES, fr-FR, de-DE, etc.
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ========== Test Execution ==========
# Parallel execution: Use with pytest -n <workers>
# Examples:
#   pytest -n auto          # Auto-detect CPU cores
#   pytest -n 4             # Use 4 workers
#   pytest -n 1             # Sequential (debugging)
PYTEST_WORKERS=auto                # Options: auto | 1 | 2 | 4 | 8 (number of parallel workers, 1 for debugging)
SCREENSHOT_ON_FAILURE=true          # Options: true | false (capture screenshots when tests fail)
SCREENSHOTS_DIR=screenshots         # Directory name for screenshots (e.g., screenshots, test-results, allure-screenshots)

# ========== Database Configuration (Optional) ==========
DB_TEST=false                       # Options: true | false (enable/disable database testing)

# SQL Database Support (PostgreSQL, MySQL, SQL Server, Oracle)
DB_TYPE=postgresql                  # Options: postgresql | mysql | mssql | oracle
DB_HOST=localhost                   # Database host (e.g., localhost, db.example.com, 192.168.1.100)
DB_PORT=5432                        # Port: 5432 (PostgreSQL) | 3306 (MySQL) | 1433 (SQL Server) | 1521 (Oracle)
DB_NAME=testdb                      # Database name
DB_USER=postgres                    # Database username
DB_PASSWORD=password                # Database password

# ========== Redis Configuration (Optional) ==========
REDIS_HOST=localhost                # Redis host (e.g., localhost, redis.example.com)
REDIS_PORT=6379                     # Redis port (default: 6379)
REDIS_DB=0                          # Redis database number (0-15, default: 0)

# ========== API Testing Configuration (Optional) ==========
API_BASE_URL=https://api.example.com

# Authentication (configure based on your API needs)
API_BEARER_TOKEN=                   # JWT/OAuth token (if needed)
API_KEY=                            # API key (if needed)
API_USERNAME=                       # For login flows or basic auth
API_PASSWORD=                       # For login flows or basic auth

# ========== Notifications (Optional) ==========
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here  # Discord webhook URL for test notifications